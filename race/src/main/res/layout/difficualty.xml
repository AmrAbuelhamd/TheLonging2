<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/difficualty_view"
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="#FF000000" >

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:src="@drawable/background_race"
		android:scaleType="centerCrop"
		/>

	<TextView
		android:id="@+id/play_head"
		android:layout_width="wrap_content"
		android:layout_height="60dp"
		android:layout_marginEnd="5dp"
		android:text="@string/play"
		android:textSize="46sp"
		android:textColor="#FFFFFFFF"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="10dp"
	/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="right"
		android:layout_alignParentEnd="true"
		android:layout_below="@id/play_head"
		>
		<Button
			android:id="@+id/diff_child"
			android:layout_width="320dp"
			android:layout_height="46dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="5dp"
			android:background="@drawable/button"
			android:text="@string/child"
			android:textColor="#FFFFFFFF"
			android:textSize="36sp"
			android:gravity="right"
			/>
		<Button
			android:id="@+id/diff_easy"
			android:layout_width="320dp"
			android:layout_height="46dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="5dp"
			android:background="@drawable/button"
			android:text="@string/easy"
			android:textColor="#FFFFFFFF"
			android:textSize="36sp"
			android:gravity="right"
			/>
		<Button
			android:id="@+id/diff_medium"
			android:layout_width="320dp"
			android:layout_height="46dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="5dp"
			android:background="@drawable/button"
			android:text="@string/medium"
			android:textColor="#FFFFFFFF"
			android:textSize="36sp"
			android:gravity="right"
			/>
		<Button
			android:id="@+id/diff_hard"
			android:layout_width="320dp"
			android:layout_height="46dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="5dp"
			android:background="@drawable/button"
			android:text="@string/hard"
			android:textColor="#FFFFFFFF"
			android:textSize="36sp"
			android:gravity="right"
			/>
		<Button
			android:id="@+id/diff_insane"
			android:layout_width="320dp"
			android:layout_height="46dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="5dp"
			android:background="@drawable/button"
			android:text="@string/insane"
			android:textColor="#FFFFFFFF"
			android:textSize="36dp"
			android:gravity="right"
			/>
		<Button
			android:id="@+id/back"
			android:layout_width="320dp"
			android:layout_height="46dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="5dp"
			android:background="@drawable/button"
			android:text="@string/back"
			android:textColor="#FFFFFFFF"
			android:textSize="36sp"
			android:gravity="right"
			/>
		</LinearLayout>
	<TextView
		android:id="@+id/footer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="5dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:text="@string/a_silence_product"
		android:textSize="30sp"
		android:textColor="#FFFFFFFF"
		/>
</RelativeLayout>