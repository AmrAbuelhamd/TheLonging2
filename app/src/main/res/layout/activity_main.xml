<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonTired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tired"
        app:layout_constraintTop_toBottomOf="@+id/buttonAmbiguity"
        tools:layout_editor_absoluteX="161dp" />

    <Button
        android:id="@+id/buttonHungry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hungry"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="161dp" />

    <Button
        android:id="@+id/buttonLonely"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lonely"
        app:layout_constraintTop_toBottomOf="@+id/buttonHungry"
        tools:layout_editor_absoluteX="161dp" />

    <Button
        android:id="@+id/buttonAmbiguity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ambiguity"
        app:layout_constraintTop_toBottomOf="@+id/buttonLonely"
        tools:layout_editor_absoluteX="156dp" />

    <Button
        android:id="@+id/buttonAcademicPerfomance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Academic Perfomance"
        app:layout_constraintTop_toBottomOf="@+id/buttonTired"
        tools:layout_editor_absoluteX="110dp" />
</androidx.constraintlayout.widget.ConstraintLayout>